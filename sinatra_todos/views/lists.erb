<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>

<ul id="lists">
  <% @lists.each_with_index do |list, index| %>
    <li class=<%= 'complete' if list_complete?(list) %>>
      <a href=<%= "/lists/#{index}"%>>
        <h2><%= list[:name] %></h2>
        <p>
          <%= remaining_todo_count(list) %>/<%= todo_count(list) %>
        </p>
      </a>
    </li>
  <% end %>
</ul>

