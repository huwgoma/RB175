<% content_for :header_links do %>
  <a href="/lists">Back to Home</a>
<% end %>

<section id="todos">
  <header>
    <h2>Editing "<%= @list[:name] %>"</h2>
    <ul>
      <li>
        <form action=<%= "/lists/#{params[:id]}/delete" %> method="post">
          <button type="submit" class="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= @list_id %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter a new name for the list:</label>
    </dt>
    <dd>
      <%# Update to pass the existing list name directly %>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] %>">
    </dd>
  </dl>

  <fieldset class="actions">
    <input type="submit" value="Update">
  </fieldset>
</form>